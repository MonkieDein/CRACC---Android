<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rootbottom_guideline"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"
        />

<android.support.constraint.ConstraintLayout
    android:id="@+id/operatebar"
    android:background="#13D2DC"
    android:layout_height="0dp"
    android:layout_width="0dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="@+id/rootbottom_guideline">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/innermiddle_guideline1"
        app:layout_constraintGuide_percent="0.43"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/innermiddle_guideline2"
        app:layout_constraintGuide_percent="0.57"
        android:orientation="vertical"
        />

    <Button
        android:id="@+id/mainicon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/iconbutton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/innermiddle_guideline1"
        app:layout_constraintRight_toRightOf="@+id/innermiddle_guideline2"
        android:layout_marginBottom="5dp"
        app:layout_constraintDimensionRatio="H,1:1"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/innermiddle_guideline3"
        app:layout_constraintGuide_percent="0.02"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/innermiddle_guideline4"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"
        />
    <Button
        android:id="@+id/management"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/management"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/innermiddle_guideline3"
        app:layout_constraintRight_toRightOf="@+id/innermiddle_guideline4"
        android:layout_marginBottom="5dp"
        app:layout_constraintDimensionRatio="H,1:1"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/innermiddle_guideline5"
        app:layout_constraintGuide_percent="0.98"
        android:orientation="vertical"
        />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/innermiddle_guideline6"
        app:layout_constraintGuide_percent="0.9"
        android:orientation="vertical"
        />

    <Button
        android:id="@+id/chatbutton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/chat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/innermiddle_guideline6"
        app:layout_constraintRight_toRightOf="@+id/innermiddle_guideline5"
        android:layout_marginBottom="5dp"
        app:layout_constraintDimensionRatio="H,1:1"/>



</android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>