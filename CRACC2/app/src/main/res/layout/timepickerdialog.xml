<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/numberPickerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="empty">

        <android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:onClick="empty"
            android:layout_height="200dp"
            app:layout_widthPercent="100%"
            android:gravity="center">

            <NumberPicker
                android:id="@+id/numberPickerdate"
                app:layout_widthPercent="40%"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:layout_heightPercent="80%" />

            <NumberPicker
                android:id="@+id/numberPickerhour"
                app:layout_widthPercent="30%"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/numberPickerdate"
                app:layout_heightPercent="80%" />

            <NumberPicker
                android:id="@+id/numberPickerminute"
                app:layout_widthPercent="20%"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/numberPickerhour"
                app:layout_heightPercent="80%" />

            <NumberPicker
                android:id="@+id/numberPickerampm"
                app:layout_widthPercent="10%"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/numberPickerminute"
                app:layout_heightPercent="80%" />
        </android.support.percent.PercentRelativeLayout>
    </android.support.percent.PercentRelativeLayout>
</FrameLayout>